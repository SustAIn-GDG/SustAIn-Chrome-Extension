{
  "manifest_version": 3,
  "name": "SustAIn",
  "version": "1.0.0",
  "description": "An awareness extension for sustainable living",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["assets/content.js"],
      "matches": ["https://*/*"]
    }
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": ["https://*/*"],
      "resources": ["assets/*"]
    }
  ],
  "permissions": []
}
