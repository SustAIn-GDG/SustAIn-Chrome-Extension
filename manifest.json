{
  "manifest_version": 3,
  "name": "SustAIn",
  "version": "1.0.0",
  "description": "A dedicated Chrome extension designed to raise awareness about sustainability when using AI technologies",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "permissions": ["activeTab","webRequest"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/prompts/*",
    "https://alkalimakersuite-pa.clients6.google.com/*"
  ],
  "author":{
    "email": "thanuskumaara@gmail.com"
  },
  "action":{
    "default_popup": "popup.html",
    "default_title": "Project SustAIn"
  },
  
  "background": {
    "service_worker": "service-worker.js"
  }
}